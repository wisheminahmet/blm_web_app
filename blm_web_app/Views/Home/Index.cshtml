<!-- Views/Shared/_Layout.cshtml -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Haber Sitesi</title>

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">Haber Sitesi</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Magazin">Magazin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Spor">Spor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Siyaset">Siyaset</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Ekonomi">Ekonomi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Üye Ol</a>
                        </li>
                        <!-- Yeni eklenen kısımlar başlangıç -->
                        <li class="nav-item">
                            <a class="nav-link" href="#">Hava Durumu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Döviz Kurları</a>
                        </li>
                        <!-- Yeni eklenen kısımlar son -->
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Haber Sitesi
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script>
        // Buraya hava durumu ve döviz kurlarıyla ilgili işlemleri ekleyebilirsiniz.
    </script>
</body>
</html>
